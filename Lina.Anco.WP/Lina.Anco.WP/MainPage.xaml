            <Button x:Name="result" 
                	FontSize="50" Height="145" 
                    Style="{StaticResource RoundButton}"
                    Click="result1_Click" Width="145" 
                	FontFamily="/Lina.Store.WP.Test;component/Assets/Font/ft60.ttf#ft60" 
